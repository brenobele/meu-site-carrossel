<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <title>Meu Site Carrossel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-dark text-white">
    <div class="container mt-5">
      <h1 class="text-center mb-4">Galeria de Imagens</h1>

      <div id="meuCarrossel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% if(images.length> 0) { %> <% images.forEach((image, index)=> { %>
          <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
            <img
              src="/uploads/<%= image %>"
              class="d-block w-100"
              style="height: 500px; object-fit: cover"
              alt=""
            />
          </div>
          <% }) %> <% } else { %>
          <div class="carousel-item active">
            <div
              class="d-flex justify-content-center align-items-center bg-secondary"
              style="height: 500px"
            >
              <h3>Nenhuma imagem cadastrada</h3>
            </div>
          </div>
          <% } %>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#meuCarrossel"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#meuCarrossel"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
      </div>

      <div class="text-center mt-4">
        <a href="/admin" class="btn btn-outline-light">Ir para o Painel</a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
