<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Painel Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="d-flex flex-column min-vh-100">
    <%- include('partials/nav_admin'); %>

    <div class="container flex-grow-1" style="padding-top: 5rem">
      <% if (typeof error !=='undefined' && error) { %>
      <div
        class="alert alert-danger alert-dismissible fade show shadow-sm"
        role="alert"
      >
        <strong>Erro!</strong>
        <%= error %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %> <% if (typeof success !=='undefined' && success) { %>
      <div
        class="alert alert-success alert-dismissible fade show shadow-sm"
        role="alert"
      >
        <strong>Sucesso!</strong>
        <%= success %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %>

      <div class="card mb-5 shadow-sm">
        <div class="card-header bg-primary text-white">
          Upload de Nova Imagem
        </div>
        <div class="card-body">
          <form
            action="/upload"
            method="POST"
            enctype="multipart/form-data"
            class="d-flex flex-column flex-md-row gap-2"
          >
            <input
              class="form-control"
              type="file"
              name="image"
              accept="image/png, image/jpeg"
              required
            />
            <button type="submit" class="btn btn-success">Enviar</button>
          </form>
        </div>
      </div>

      <h4 class="mb-3">Gerenciar Imagens Atuais</h4>

      <div class="row g-3">
        <% if(images.length> 0) { %> <% images.forEach((image)=> { %>
        <div class="col-md-3 col-6">
          <div class="card h-100">
            <img
              src="/uploads/<%= image %>"
              class="card-img-top"
              style="height: 150px; object-fit: cover"
              alt="Thumb"
            />

            <div class="card-body text-center p-2">
              <small
                class="d-block text-muted text-truncate mb-2"
                title="<%= image %>"
              >
                <%= image %>
              </small>

              <form
                action="/delete"
                method="POST"
                onsubmit="return confirm('Tem certeza que deseja excluir esta imagem?');"
              >
                <input type="hidden" name="imageName" value="<%= image %>" />
                <button
                  type="submit"
                  class="btn btn-sm btn-outline-danger w-100"
                >
                  Excluir
                </button>
              </form>
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <div class="col-12">
          <div class="alert alert-info">
            Nenhuma imagem cadastrada no sistema.
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <%- include('partials/footer'); %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
